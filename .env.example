# PHP Blockchain Integration Layer - Environment Configuration Example
#
# Copy this file to .env and update the values according to your needs.
# Environment variables can be loaded using ConfigLoader::fromEnv()

# =============================================================================
# Blockchain Configuration
# =============================================================================

# Solana Configuration
# --------------------
# RPC URL for Solana network (Required)
# Options:
#   - Mainnet: https://api.mainnet-beta.solana.com
#   - Devnet: https://api.devnet.solana.com
#   - Testnet: https://api.testnet.solana.com
BLOCKCHAIN_RPC_URL=https://api.mainnet-beta.solana.com

# Request timeout in seconds (Optional, default: 30)
BLOCKCHAIN_TIMEOUT=30

# Commitment level (Optional, default: finalized)
# Options: finalized, confirmed, processed
BLOCKCHAIN_COMMITMENT=finalized

# =============================================================================
# Additional Configuration
# =============================================================================

# Enable debug mode (Optional, default: false)
# BLOCKCHAIN_DEBUG=false

# Cache enabled (Optional, default: true)
# BLOCKCHAIN_CACHE_ENABLED=true

# Custom port for local development (Optional)
# BLOCKCHAIN_PORT=8545

# Rate limit for API calls per second (Optional)
# BLOCKCHAIN_RATE_LIMIT=100
