{
  "name": "azaharizaman/php-blockchain-agent",
  "description": "An open-source PHP package providing a unified blockchain integration layer with agentic capabilities.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Azahari Zaman",
      "email": "youremail@example.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "guzzlehttp/guzzle": "^7.8",
    "symfony/console": "^7.0",
    "composer-phar/phpcbf": "^4.0",
    "psr/log": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Blockchain\\": "src/",
      "Blockchain\\Agent\\": "tools/agent/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blockchain\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^4.0",
    "phpstan/phpstan": "^1.10",
    "mockery/mockery": "^1.6"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-html coverage/html",
    "test:coverage-text": "vendor/bin/phpunit --coverage-text",
    "test:coverage-clover": "vendor/bin/phpunit --coverage-clover coverage/clover.xml",
    "test:check-coverage": [
      "@test:coverage-clover",
      "php scripts/check-coverage.php"
    ],
    "integration-test": "vendor/bin/phpunit --testsuite integration || vendor/bin/phpunit tests/Integration || echo \"No integration tests found\"",
    "generate-docs": "php scripts/generate-driver-docs.php",
    "check-docs": "php scripts/check-driver-docs.php",
    "analyse": "vendor/bin/phpstan analyse --memory-limit=1G",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=1G",
    "lint": "vendor/bin/phpcs",
    "fix": "vendor/bin/phpcbf"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
